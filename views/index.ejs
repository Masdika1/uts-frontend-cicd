<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Produk Kami</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
  <div class="max-w-6xl mx-auto py-8">
    <h1 class="text-3xl font-bold text-center text-blue-600 mb-6">Daftar Produk</h1>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <% produk.forEach(p => { %>
        <div class="bg-white rounded shadow hover:shadow-lg">
          <img src="<%= p.gambar_url %>" class="w-full h-48 object-cover">
          <div class="p-4">
            <h2 class="text-xl font-bold"><%= p.nama %></h2>
            <p class="text-green-600">Rp <%= p.harga.toLocaleString('id-ID') %></p>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
